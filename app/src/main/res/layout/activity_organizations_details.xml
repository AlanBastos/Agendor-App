<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:id="@+id/appbar"
        android:layout_height="200dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
            android:id="@+id/orgImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="40dp"/>

            <TextView
                android:id="@+id/orgName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="140dp"
                android:layout_marginTop="60dp"
                android:textColor="#FFF"
                android:textSize="13sp"
                android:text="LOASDJSIDIODJI" />

            <TextView
                android:id="@+id/orgSector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="140dp"
                android:layout_marginTop="80dp"
                android:textColor="#fff"
                android:textSize="11sp"
                android:text="KODFKDOOFKKOFDPK" />

            <TextView
                android:id="@+id/web"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:textColor="#284784"
                android:layout_below="@+id/orgImage"
                android:textSize="12sp"
                android:text="Website" />


            <TextView
                android:id="@+id/website"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:textColor="#fff"
                android:layout_below="@+id/web"
                android:textSize="10sp"
                android:text="" />

        </RelativeLayout>

    </android.support.design.widget.AppBarLayout>


    <android.support.v7.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/orgInformation"
        android:layout_margin="25dp"
        android:layout_width="fill_parent"
        android:layout_height="170dp"
        android:layout_below="@+id/appbar"
        android:elevation="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/ic_contact_mail_black_24dp" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="45dp"
                android:text="Informações da Empresa"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Descrição"
                android:layout_marginLeft="10dp"
                android:layout_below="@+id/textView18"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/orgdescription"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="10dp"
                android:text=""
                android:layout_below="@+id/textView20"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textView22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="10dp"
                android:layout_below="@+id/orgdescription"
                android:text="CNPJ"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView23"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_marginLeft="10dp"
                android:layout_below="@+id/textView22"
                android:text=""
                android:textSize="13sp" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="35dp"
        android:id="@+id/orgcardadrdress"
        android:layout_width="fill_parent"
        android:layout_below="@+id/orgInformation"
        android:layout_height="100dp"
        android:elevation="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/image"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/ic_place_black_24dp" />

            <TextView
                android:id="@+id/org1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="45dp"
                android:text="Endereço"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/orgAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text=""
                android:textSize="11sp"
                android:layout_marginLeft="10dp"
                android:layout_below="@+id/org1"
                />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="35dp"
            android:layout_width="fill_parent"
            android:layout_below="@+id/orgcardadrdress"
            android:id="@+id/cardcategoria"
            android:layout_height="100dp"
            android:elevation="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/image2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/ic_group_black_24dp" />

                <TextView
                    android:id="@+id/org2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="45dp"
                    android:text="Categoria"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/categoria"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text=""
                    android:textSize="11sp"
                    android:layout_marginLeft="10dp"
                    android:layout_below="@+id/org2"
                    />


            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/orgContact"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="10dp"
            android:layout_width="fill_parent"
            android:layout_height="215dp"
            android:layout_below="@+id/cardcategoria"
            android:elevation="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView00"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/ic_call_black_24dp" />

                <TextView
                    android:id="@+id/textView1800"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="45dp"
                    android:text="Contato"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/textView2000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Email"
                    android:layout_marginLeft="10dp"
                    android:layout_below="@+id/imageView00"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/orgEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="10dp"
                    android:text=""
                    android:layout_below="@+id/textView2000"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/textView22000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="10dp"
                    android:layout_below="@+id/orgEmail"
                    android:text="Telefone"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/orgPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:layout_marginLeft="10dp"
                    android:layout_below="@+id/textView22000"
                    android:text=""
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/textViewcelular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="10dp"
                    android:layout_below="@+id/orgPhone"
                    android:text="Celular"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/orgcellphone"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:layout_marginLeft="10dp"
                    android:layout_below="@+id/textViewcelular"
                    android:text=""
                    android:textSize="13sp" />


            </RelativeLayout>

        </android.support.v7.widget.CardView>

</RelativeLayout>

</ScrollView>